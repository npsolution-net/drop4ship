{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
  </ul>
  {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}

  <div class="row">   
    {{ lts_column_left }}
    <div id="content" class="col-sm-9">
      {{ lts_mobile_menu }}   
      <div class="lts-dashboard-wrap">
        <div class="row">
          <div class="col-sm-12 lts-products">
            <div class="panel panel-default">
              <div class="panel-heading clearfix"><span>{{ text_list}}</span>
                <div class="pull-right">
                </div>
              </div>
            </div>

       

           
            {# Commission list #}


              <div class="table-responsive">
              <table class="table table-bordered table-hover">
                <thead>
                <tr>

                  <th class="text-center">{{ column_order_id }}</th>
                  <th class="text-left">{{ column_product }}</th>
                   <th class="text-right">{{ column_price }}</th>
                  <th class="text-right">{{ column_quantity }}</th>
                  <th class="text-right">{{ column_total }}</th>
                  <th class="text-right">{{ column_commission }}</th>
                </tr>
                </thead>
                  <tbody>
                    {% if commissions %}
                      {% for commission in commissions %}
                        <tr>
                          <td class="text-center">{{ commission.order_id }}</td>
                          <td class="text-left">{{ commission.name }}</td>
                          <td class="text-right">{{ commission.price }}</td>
                          <td class="text-right">{{ commission.quantity }}</td>
                          <td class="text-right">{{ commission.total }}</td>
                          <td class="text-right">{{ commission.amount }}</td>
                        
                        </tr>

                      {% endfor %}

                    {% else %}

                          <tr>
                            <td class="text-right">{{ text_result }}</td>
                           
                          </tr>

                    {% endif %}
                        
                  </tbody>
              </table>
            </div>



            <div class="row">
              <div class="col-sm-6 text-left">{{ pagination }}</div>
              <div class="col-sm-6 text-right">{{ results }}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
