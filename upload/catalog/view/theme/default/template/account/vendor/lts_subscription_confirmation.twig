{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
  </ul>
  {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}

  <div class="row">   
    {{ lts_column_left }}
    <div id="content" class="col-sm-9">
      {{ lts_mobile_menu }}   
      <div class="lts-dashboard-wrap">
        <div class="row">
          <div class="col-sm-12 lts-subscriptions">
            <div class="panel panel-default">
              <div class="panel-heading clearfix"><span>{{ text_confirmation }}</span>
              </div>
            </div>

            <div class="panel-body">
              <div class="col-sm-12 lts-subscription">
                  <form action="{{ action }}" method="post" enctype="multipart/form-data" id="vendor-form-category" class="form-horizontal">
                  <div class="lts-title"><h3>{{ subscription.name }}</h3></div>
                    <div class="subscription-item">
                      <div class="plan-item flex text-left">
                        <div class="">{{ text_product }} <kbd>{{ product }}</kbd> </div>
                      </div> 

                      <div class="plan-item flex text-left">
                        <div> {{text_join_fee}} <kbd>{{ join_fee }}</kbd></div>
                      </div>
                       <div class="plan-item flex text-left">
                        <div>{{ text_subscription_fee }} <kbd>{{ subscription_fee }}</kbd></div>
                      </div> 
                      <div class="plan-item flex text-left">
                      
                        <div>{{ text_validity }} <kbd>{{ validity }}</kbd> </div>
                      </div>

                    </div>

                    <div class="buttons">
                      <div class="pull-right">
                        <button class="btn btn-primary">{{ button_save_and_invoice }}</button>
                      </div>
                    </div>
                  </form>
                </div>

            </div>




          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}