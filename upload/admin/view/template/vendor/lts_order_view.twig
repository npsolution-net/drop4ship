{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
       {#  <button type="submit" form="form-captcha" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a> #}</div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th colspan="2">{{ text_order_details }}</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><b>{{ text_order_id }} :</b> {{ order_id }}</td>
                <td><b>{{ text_payment_method }}</b> {{ payment_method }} </td>
              </tr>
              <tr>
                <td><b>{{ text_date_added }} :</b> {{ date_added }} </td>
                <td><b>{{ text_shipping_method }}</b> {{ shipping_method }}</td>
              </tr>
            </tbody>
          </table>

          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>{{ text_payment_address }}</th>
                <th>{{ text_shipping_address }}</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td> Payment Address </td>
                <td> Shipping Address </td>
              </tr>
            </tbody>
          </table>

          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>{{ text_product_name }}</th>
                <th>{{ text_model }}</th>
                <th>{{ text_quantity }}</th>
                <th>{{ text_order_status }}</th>
                <th>{{ text_price }}</th>
                <th>{{ text_total }}</th>
              </tr>
            </thead>
            <tbody>
             {% if products %}
                {% for product in products %}
                  <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.model }}</td>
                    <td>{{ product.quantity }}</td>
                    <td>{{ product.order_status }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.total }}</td>
                    
                  </tr>
                {% endfor %}
              {% endif %}


             
            </tbody>
          </table>

          {# <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>{{ text_date }}</th>
                <th>{{ text_status }}</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td></td>
                <td></td>
              </tr>
            </tbody>
          </table>
 #}
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}
