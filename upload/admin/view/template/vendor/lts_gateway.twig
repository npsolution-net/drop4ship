{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-gateway" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-gateway" class="form-horizontal">

    		<div class="form-group">
        	  <label class="col-sm-2 control-label" for="input-status">{{ entry_gateway_status }}</label>
        	  <div class="col-sm-10">
        	    <select name="lts_gateway_status" id="input-status" class="form-control">
        	      {% if lts_gateway_status %}
        	      <option value="1" selected="selected">{{ text_enabled }}</option>
        	      <option value="0">{{ text_disabled }}</option>
        	      {% else %}
        	      <option value="1">{{ text_enabled }}</option>
        	      <option value="0" selected="selected">{{ text_disabled }}</option>
        	      {% endif %}
        	    </select>
        	  </div>
        	</div>
        	<hr>


	        <ul class="nav nav-tabs">
	            <li class="active"><a href="#tab-gateway" data-toggle="tab">{{ tab_gateway }}</a></li>
	            {# <li><a href="#tab-login-registration" data-toggle="tab">{{ tab_login_registration }}</a></li> #}
	            <li><a href="#tab-order" data-toggle="tab">{{ tab_order }}</a></li>
            </ul>

         	<div class="tab-content">
	          <div class="tab-pane active" id="tab-gateway">
	          	<div class="form-group">
	          	 	<label class="control-label col-sm-2">{{ entry_gateway_sender }}</label>
	          	 	<div class="col-sm-10">
	          	 		<input type="text" name="lts_gateway_sender" value="{{ lts_gateway_sender }}" class="form-control" placeholder="{{ entry_gateway_sender }}" >
	          	 	</div>
	          	</div>

	          	 <div class="form-group">
	          	 	<label class="control-label col-sm-2">{{ entry_apikey }}</label>
	          	 	<div class="col-sm-10">
	          	 		<input type="text" name="lts_gateway_apikey" value="{{ lts_gateway_apikey }}" class="form-control"  placeholder="{{ entry_apikey }}">
	          	 	</div>
	          	 </div>
	          </div>

	           <div class="tab-pane" id="tab-order">

       				<div class="table-responsive">
		                <table id="discount" class="table table-striped table-bordered table-hover">
		                  <thead>
		                    <tr>
		                      <th class="text-left">{{ text_keyword }}</th>
		                      <th class="text-left">{{ text_variable }}</th>
		                    </tr>
		                  </thead>
		                  <tbody>
		                  	<tr>
		                  		<td>
		                  		{{ text_customer }} <br>
		                  		{{ text_order_id }} <br>
		                  		{{ text_store_url }} <br>
		                  		{{ text_store_name }} <br>
		                  		{{ text_product }} <br>
		                  		{{ text_price }} <br>
		                  		{{ text_comment }} <br>

		                  		</td>
		                  		<td>
		                  			{{ text_var_customer }} <br>
		                  			{{ text_var_order_id }} <br>
		                  			{{ text_var_store_url }} <br>
		                  			{{ text_var_store_name }} <br>
		                  			{{ text_var_product }} <br>
		                  			{{ text_var_price }} <br>
		                  			{{ text_var_comment }} <br>
		                  		</td>
		                  		
		                  	</tr>
		                  </tbody>
		                </table>
		              </div>



	           {# </div> #}

	           	{% if order_statuses %}
	           		<div class="col" style="float: left;width: 100%;">
	           			{% set row = 1 %}
	           		{% for order_status in order_statuses %}
	           		<div style="display: block; padding: 13px 7px;" data-toggle="collapse" data-target="#sms{{ row }}" class="collapsed" aria-expanded="false">{{ order_status.name }}<i style="float:right" class="fa fa-plus"></i></div>
		          		<div id="sms{{ row }}" class="collapse" aria-expanded="false" style="height: 0px;">
							<div class="form-group">
								<label class="col-sm-2 control-label" for="order-status-{{ order_status.order_status_id }}">{{ entry_status }}</label>
									<div class="col-sm-10">
										<select name="lts_gateway_order[{{ order_status.order_status_id }}][status]" id="order-status-{{ order_status.order_status_id }}" class="form-control">
										{% if lts_gateway_order[order_status.order_status_id].status %}
												<option value="1" selected="selected">{{ text_enabled }}</option>
												<option value="0" >{{ text_disabled }}</option>
											{% else %}
												<option value="1">{{ text_enabled }}</option>
												<option value="0" selected="selected">{{ text_disabled }}</option>

										{% endif %}
										
										</select>
									</div>
							</div>
		          									
		          			<div class="form-group row">
		          				<label class="col-sm-2 control-label" for="order-template-{{  order_status.order_status_id }}">{{ entry_template }}</label>
	          					<div class="col-sm-10">
	          						<textarea name="lts_gateway_order[{{ order_status.order_status_id }}][template]" row="5"  id="order-template-{{  order_status.order_status_id }}" placeholder="{{ entry_template }}" class="form-control">{{ lts_gateway_order[order_status.order_status_id].template }}</textarea>
	          					</div>
			          		</div>
		          		</div>
	           			{% set row = row + 1 %}
	           		{% endfor %}
	           		</div>
	           	{% endif %}

	        </div>


        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
