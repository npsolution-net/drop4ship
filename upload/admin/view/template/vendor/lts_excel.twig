{{ header }}
{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
	  {% for breadcrumb in breadcrumbs %}
        <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		{% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
	{% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
	{% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default card">
      <div class="panel-heading">
        <h3 class="panel-title card-header"><i class="fa fa-list"></i> {{ text_product_export }}</h3>
      </div>
	  
      <div class="panel-body card-body">
	  		
	  <form action="{{ export }}"  method="post" enctype="multipart/form-data" id="form-export">
	  <div class="well card mb-3 p-3">
	   <h4 class="panel-title" style=" padding: 0px 0px 20px 0px; "> {{ text_product_export }}</h4>
		 <div class="row">

				<div class="col-sm-6" style="text-align:left;">
					<div class="form-group">
						<label class="control-label col-form-label" for="input-name" >{{ entry_vendor }}</label>
						<select name="vendor_id" id="input-status" class="form-control">
							<option value="" >{{ text_none }} </option>
							 {% for vendor_id in vendors %}
			                 	 <option value="{{ vendor_id.vendor_id  }}" >{{ vendor_id.store_name }} ({{ vendor_id.vendor_id }})</option>
							  {% endfor %}
		                </select>
					
		            </div>
				</div>
				
				<div class="col-sm-6" style="text-align:left;">
					<div class="form-group">
						<label class="control-label col-form-label" for="input-name" >{{ entry_language }}</label>
		                <select name="language" id="input-status" class="form-control">
						 	{% for language in languages %} 
		                 		 <option value="{{ language.language_id }}" {% if language.default %} selected  {% endif %} >{{ language.name }}</option>
							  {% endfor %}
		                </select>
	              </div>
			    </div>
				
				
				<div class="col-sm-12" style="text-align:left;">
				  <div class="form-group">
				  	<input type="submit" value="{{ button_export }}" class="btn btn-primary" title="{{ button_export }}" class="button_add">
					
				  </div>
				</div>
              </div>
            </div>
		</form>     
      </div>
    </div>
  </div>

{{ footer }} 
</style>